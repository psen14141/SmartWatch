@model SmartWatch.Areas.Companies.Models.ViewModels.CompanyViewModel

@{
    ViewData["Title"] = "AddorEdit";
}

<div class="row">
    <div class="col-md-12">

        <form method="post" action="/Companies/Company/SaveCompany">

            <input name="CompanyId" id="CompanyId" type="hidden" class="form-control" value="@Model.CompanyId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4 align-self-center"><label asp-for="CountryId" class="col-md-4 text-right">Country</label></div>
                    <div class="col-md-8 align-self-cente">
                        <div class="form-group">
                            <select class="form-control" name="CountryId" id="CountryId" value="@Model.CountryId">

                                @foreach (var type in Model.countryList)
                                {

                                    if (type.CountryCode == Model.CountryId)
                                    {
                                        <option selected value="@type.CountryCode">@type.Country1</option>


                                    }
                                    else
                                    {

                                        <option selected value="@type.CountryCode">@type.Country1</option>

                                    }

                                }

                            </select>


                            <span asp-validation-for="CountryId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4 align-self-center"><label asp-for="Name" class="col-md-4 text-right">Company Name</label></div>
                    <div class="col-md-8 align-self-cente">
                        <input name="Name" placeholder="Company Name" id="Name" class="form-control" value="@Model.Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4 align-self-center"><label asp-for="RegNo" class="col-md-4 text-right">Registration No</label></div>
                    <div class="col-md-8 align-self-cente">
                        <input name="RegNo" placeholder="RegNo" id="RegNo" class="form-control" value="@Model.RegNo" />
                        <span asp-validation-for="RegNo" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4 align-self-center"><label asp-for="Phone" class="col-md-4 text-right">Phone Number</label></div>
                    <div class="col-md-8 align-self-cente">
                        <input name="Phone" placeholder="Phone" id="Phone" class="form-control" value="@Model.Phone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4 align-self-center"><label asp-for="Logo" class="col-md-4 text-right">Logo</label></div>
                    <div class="col-md-8 align-self-cente">
                        <input name="Logo" placeholder="Logo" id="Logo" class="form-control" value="@Model.Logo" />
                        <span asp-validation-for="Logo" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="form-group">
                <div class="row">
                    <div class="col-md-4 align-self-center"><label asp-for="CompanyBranchColor" class="col-md-4 text-right">Company Branch Color</label></div>
                    <div class="col-md-8 align-self-cente">
                        <input name="CompanyBranchColor" placeholder="CompanyBranchColor" id="CompanyBranchColor" class="form-control" value="@Model.CompanyBranchColor" />
                        <span asp-validation-for="CompanyBranchColor" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-4 align-self-center"><label asp-for="CompanyForColor" class="col-md-4 text-right">Company For Color</label></div>
                    <div class="col-md-8 align-self-cente">
                        <input name="CompanyForColor" placeholder="CompanyForColor" id="CompanyForColor" class="form-control" value="@Model.CompanyForColor" />
                        <span asp-validation-for="CompanyForColor" class="text-danger"></span>
                    </div>
                </div>
            </div>


            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
